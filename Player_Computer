import java.util.ArrayList;

public class Player_Computer extends Game_Climbing.Player
{
	private int cardInHand;
	int cardLeft = 52;
	private ArrayList<Card>  playerCards ; 

	// For this game, always need to be dealt
	public boolean needDealt() 
	{ 
		if((cardInHand<8) && (cardLeft>0) ) 
			return true; 
		else 
			return false;
	}

	// Got a card from dealer
	public void getDealt(Card aCard)
	{
		playerCards.add(aCard);
		cardInHand++;
		cardLeft--;
	}

	public Card placeCard()
	{    
		return playerCards.get(0);
	}


	// Other useful methods

	// Other useful variables
}
